<%= render 'layouts/header.html.erb', title: 'Mot de passe oublié ?', subheading: ""  %>

<div class="container">

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.input :email, label:false, placeholder: 'Email' %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Récupérer mon mot de passe"%>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
