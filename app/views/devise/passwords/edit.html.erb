<%= render 'layouts/header.html.erb', title: 'Changer de mot de passe', subheading: ""  %>


<div class="container">  
  <% flash.each do | name,msg| %>
    <% if name == "alert" %>
      <div class="alert alert-danger fade in">
        <%= msg %>
      </div>
    <% end %>
  <% end %>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>


  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.input :password, label:false, placeholder: 'Mot de passe (6 caractÃ¨res minimum)' %>
  </div>

  <div class="field">
    <%= f.input :password_confirmation, label:false, autocomplte: "off", placeholder: 'Confirmation du mot de passe' %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Changer mon mot de passe"%>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
