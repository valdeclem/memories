<header class="intro-header" style="background-image: url(<%=image_url 'book.jpg' %>)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Se connecter</h1>
                    <hr class="small">
                    <span class="subheading"></span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
  <div class="col-sm-5">
    <h1 class="text-center">Inscription</h1>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
      <%= f.input :firstname, label: 'Prenom', error: 'Username is mandatory, please specify one' %>
      <%= f.input :lastname, label: 'Nom', error: 'Username is mandatory, please specify one' %>
      <%= f.input :email %>
      <%= f.input :password, label: 'Mot de passe' %>
      <%= f.input :password_confirmation, label: 'Confirmation du mot de passe' %>
      <%= f.button :submit, "Créer un compte"%>
    <% end %>
  </div>
  <div class="col-sm-5 col-sm-offset-2">
    <h1 class="text-center">Déjà Inscrit ?</h1>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
      <%= f.input :email %>
      <%= f.input :password, label: "Mot de passe"%>
      <%= f.button :submit, "Se connecter"%>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
