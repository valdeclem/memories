
  <%= simple_form_for memory do |f| %>
    <%= f.input :title, placeholder: 'Titre', label:false %>
    <%= f.input :adress, placeholder: 'Lieu du souvenir', label:false %>
    <%= f.input :date, class:"datetime", placeholder: 'Date du souvenir', label:false, start_year: Date.today.year - 100, end_year: Date.today.year %>
    <%= f.input :histoire, label:false, placeholder: 'Raconte ton histoire...', :input_html => {:rows => 10} %>

    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Enregistrer", class:"btn edit" %>
    <%= link_to 'Retour', memories_path, class:"btn back" %>
  <% end %>

  <script type="text/javascript">
      $(".form_datetime").datetimepicker({format: 'yyyy-mm-dd hh:ii'});
  </script>
