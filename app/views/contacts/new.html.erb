<%= render 'layouts/header.html.erb', title: 'Contact', subheading: ""  %>
<div class="container">
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
  <div class="row"> 
    <div class="col-md-5 padding"> <%= f.input :nom, :required => true %>
    <%= f.input :prenom, :required => true %>
    <%= f.input :email, :required => true %>
    </div>

    <div class="col-md-5 padding"> <%= f.input :objet, :required => true %>
    <%= f.input :message, :as => :text, :required => true %>
    </div>
  </div>

    

    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Envoyer', :class=> "btn btn-envoi pull-right" %>
    </div>
  <% end %>
</div>


